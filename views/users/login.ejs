<% layout('/layouts/boilerplate')-%>

<div class="row mt-3">
	<h1 class="col-6 mt-3 offset-3">Login</h1>
	<div class="col-6 mt-3 offset-3">
		<form
			action="/login"
			method="post"
			class="needs-validation"
			novalidate
		>
			<div class="mb-3">
				<label for="username" class="from-lable">Username</label>
				<input
					type="text"
					placeholder="Enter Username"
					name="username"
					class="form-control"
					id="username"
					required
				/>
				<div class="invalid-feedback">it's important</div>
			</div>
            <div class="mb-3">
				<label for="password" class="from-lable">Password</label>
				<input
					type="password"
					placeholder="Enter password"
					name="password"
					class="form-control"
					id="password"
					required
				/>
				<div class="invalid-feedback">it's important</div>
			</div>
            <button class="btn btn-success">Login</button> 
		</form>
	</div>
</div>